<div class="img-featured">
    <figure>
        <img src="{{ section.settings.image | img_url }}" loading="lazy" alt="{{ section.settings.image.alt | escape }}">
    </figure>
</div>
{% schema %}

{
    "name": "Featured Page",
    "tag": "section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.image-banner.settings.image.label"
        }
    ]
}

{% endschema %}
